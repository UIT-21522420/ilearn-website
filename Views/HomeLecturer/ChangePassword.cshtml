@model ILEARN.Models.Account

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thay đổi mật khẩu</h1>
                <form action="@Url.Action("ChangePassword","HomeLecturer", new {ID = int.Parse(User.FindFirst("id").Value)})" method="post">
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Nhập mật khẩu</label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="text" name="password1" placeholder="Nhập mật khẩu..." />
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Nhập lại mật khẩu</label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="text" name="password2" placeholder="Nhập lại mật khẩu..."/>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <p>@TempData["error"]</p>
                    </div>
                    <button class="btn btn-primary" type="submit">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>
