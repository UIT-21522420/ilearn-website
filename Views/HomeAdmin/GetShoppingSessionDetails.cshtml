@{
    ViewData["Title"] = "GetShoppingSessionDetails";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@model List<ILEARN.Models.Cart>
@using ILEARN.Models;

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Chi tiết giao dịch</h1>
                <table class="table table-bordered" id="transactionDetailsTable" style="font-size: 12px">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Khóa học</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Course.CourseName</td>
                                    <td>@String.Format("{0: #,##0đ}", item.Course.DiscountPrice)</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#transactionDetailsTable').DataTable();
    })
</script>


