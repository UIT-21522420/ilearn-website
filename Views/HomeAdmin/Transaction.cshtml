@{
    ViewData["Title"] = "Transaction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@model List<ILEARN.Models.ShoppingSession>
@using ILEARN.Models;

@{
    ViewData["Title"] = "Danh sách giao dịch";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Danh sách giao dịch</h1>
                <table class="table table-bordered" id="transactionTable" style="font-size: 12px">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã giao dịch</th>
                            <th>Tên học sinh</th>
                            <th>Ngày giao dịch</th>
                            <th>Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var l in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <a href="@Url.Action("GetShoppingSessionDetails","HomeAdmin",new{ID = l.Id})">
                                            <span>T00</span>@l.Id
                                        </a>
                                    </td>
                                    <td>@Common.GetStudentByID(l.AccountId).Name</td>
                                    <td>@l.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@String.Format("{0: #,##0đ}",@l.Total)</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#transactionTable').DataTable();
    })
</script>
