@model ILEARN.Models.VMLogin;
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - ILEARN</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/metisMenu.min.css" rel="stylesheet">
    <link href="~/css/startmin.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" asp-action="Signin" asp-controller="Authentication">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" asp-for="Email" placeholder="Nhập email" name="Email" type="text" autofocus>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="Password" placeholder="Nhập mật khẩu" name="Password" type="password" value="">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <span>
                                        @TempData["error"]
                                    </span>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" asp-for="KeepLoggedIn" type="checkbox" value="Remember Me">Nhớ tài khoản
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                                <br>
                                <div class="form-group">
                                    Bạn chưa có tài khoản? <a href="@Url.Action("Signup","Authentication")">Đăng ký</a>
                                </div>
                                <div class="form-group">
                                    Bạn là giảng viên? <a href="@Url.Action("SignUpForLecturer","Authentication")">Đăng ký cho giảng viên</a>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/startmin.js"></script>

</body>

</html>
