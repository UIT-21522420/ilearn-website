@{
    ViewData["Title"] = "Thêm giảng viên";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm giảng viên</h1>
                <form action="@Url.Action("AddNewLecturer","Lecturer")" method="post">
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Tên giảng viên <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-sm" type="text" name="name" placeholder="Nhập tên giảng viên..." required/>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Email <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-sm" type="email" name="email" placeholder="Nhập email..." required/>
                        </div>                  
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Chú thích</label>
                        </div>
                        <div class="col-md-10">
                            <textarea name="description" class="input-sm textarea-style ml-2" cols="100" rows="16" placeholder="Nhập chú thích..."></textarea>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Số điện thoại <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-sm" type="tel" name="phone" placeholder="Nhập số điện thoại..." required/>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Image Link</label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-sm" type="text" name="img" placeholder="Nhập image link..." />
                        </div>
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>

