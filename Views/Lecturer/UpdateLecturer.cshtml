@model ILEARN.Models.Lecturer

@{
    ViewData["Title"] = "Sửa giảng viên";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sửa giảng viên</h1>
                <form action="@Url.Action("UpdateCurrentLecturer","Lecturer", new {ID = Model.Id})" method="post">
                    <input type="text" name="ID" value="@Model.Id" hidden/>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Tên giảng viên <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="text" name="name" placeholder="Nhập tên giảng viên..." value="@Model.LecturerName"/>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Email <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="email" name="email" placeholder="Nhập email..." value="@Model.Email" disabled/>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Chú thích</label>
                        </div>
                        <div class="col-md-10">
                            <textarea name="description" class="description textarea-style ml-2" cols="100" rows="16" placeholder="Nhập chú thích...">@Model.Description</textarea>
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Số điện thoại <span style="color: red">*</span></label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="tel" name="phone" placeholder="Nhập số điện thoại..." value="@Model.Phone" />
                        </div>
                    </div>
                    <div class="row mb-2" style="margin-bottom: 20px">
                        <div class="col-md-2">
                            <label class="label-style">Image Link</label>
                        </div>
                        <div class="col-md-10">
                            <input class="input-style input-lg" type="text" name="img" placeholder="Nhập image link..." value="@Model.Img" />
                        </div>
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>
</div>
